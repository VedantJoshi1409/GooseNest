generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  currentTerm String   @default("1A")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  templateId Int?
  template   Template? @relation(fields: [templateId], references: [id])

  plan         Plan?
  schedule     TermCourse[]
}

model Plan {
  id         Int      @id @default(autoincrement())
  name       String
  userId     Int      @unique
  templateId Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user         User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  template     Template          @relation(fields: [templateId], references: [id])
  requirements PlanRequirement[]
}

model PlanRequirement {
  id            Int    @id @default(autoincrement())
  name          String
  amount        Int
  courseGroupId Int
  planId        Int

  plan        Plan        @relation(fields: [planId], references: [id], onDelete: Cascade)
  courseGroup CourseGroup @relation(fields: [courseGroupId], references: [id])
}

model Faculty {
  name    String   @id
  courses Course[]
}

model Course {
  code  String @id
  title String

  facultyName String
  faculty     Faculty @relation(fields: [facultyName], references: [name])

  prereqs CoursePrereq[] @relation("target")
  unlocks CoursePrereq[] @relation("source")

  courseGroups CourseGroupLink[]
  termCourses TermCourse[]
}

model CoursePrereq {
  courseCode String
  prereqCode String

  course Course @relation("target", fields: [courseCode], references: [code])
  prereq Course @relation("source", fields: [prereqCode], references: [code])

  @@id([courseCode, prereqCode])
}

model Template {
  id   Int    @id @default(autoincrement())
  name String

  requirements Requirement[]
  plans        Plan[]
  users        User[]
}

model Requirement {
  id            Int    @id @default(autoincrement())
  name          String
  courseGroupId Int
  templateId    Int

  template    Template    @relation(fields: [templateId], references: [id], onDelete: Cascade)
  amount      Int
  courseGroup CourseGroup @relation(fields: [courseGroupId], references: [id])
}

model CourseGroup {
  id   Int    @id @default(autoincrement())
  name String

  links            CourseGroupLink[]
  requirements     Requirement[]
  planRequirements PlanRequirement[]
}

model CourseGroupLink {
  groupId    Int
  courseCode String

  courseGroup CourseGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  course      Course      @relation(fields: [courseCode], references: [code])

  @@id([groupId, courseCode])
}

model TermCourse {
  userId     Int
  courseCode String
  term       String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseCode], references: [code])

  @@id([userId, courseCode])
}
